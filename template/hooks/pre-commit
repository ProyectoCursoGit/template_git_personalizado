#!/bin/bash
 
git diff --cached --name-status --diff-filter=ACMR | while read STATUS FILE; do
if [[ "$FILE" =~ ^.+(BAK)$ ]]; then
    echo "No puede haber archivos terminados en .BAK" >&2
    exit 1

elif [[ "$FILE" =~ ^.+(bak)$ ]]; then
    echo "No puede haber archivos terminados en .bak" >&2
    exit 1

elif [[ "$FILE" =~ [0-9].* ]]; then
    echo "El nombre de un archivo no puede contener dÃ­gitos" >&2
    exit 1


fi
done
